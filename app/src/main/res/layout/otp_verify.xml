<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sg.edu.nyp.alexia.OTPVerification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ptv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Enter your One-Time-Password"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/ptv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ptv1"
                android:paddingTop="16dp"
                android:text="An OTP has been sent to your registered phone number"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/piv1"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/ll1"
            android:src="@drawable/ic_message_black_36dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:elevation="6dp"
            android:layout_marginLeft="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="pinLayout"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <EditText
            android:id="@+id/et1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_border_normal"
            android:clickable="true"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:onClick="pinLayout"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="-"
            android:textColor="#E3E3E3"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_border_normal"
            android:clickable="true"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:onClick="pinLayout"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="-"
            android:textColor="#E3E3E3"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_border_normal"
            android:clickable="true"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:onClick="pinLayout"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="-"
            android:textColor="#E3E3E3"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_border_normal"
            android:clickable="true"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:onClick="pinLayout"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="-"
            android:textColor="#E3E3E3"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/et5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_border_normal"
            android:clickable="true"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:onClick="pinLayout"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="-"
            android:textColor="#E3E3E3"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/et6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_border_normal"
            android:clickable="true"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:onClick="pinLayout"
            android:textSize="32sp" />

    </LinearLayout>

    <Button
        android:id="@+id/gk"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_gravity="right"
        android:elevation="2dp"
        android:onClick="display"
        android:text="Submit"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
